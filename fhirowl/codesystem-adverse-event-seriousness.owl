adverse-event-seriousness:
        a                owl:Ontology ;
        rdfs:comment     "Overall seriousness of this event for the patient" ;
        rdfs:label       "AdverseEventSeriousness" ;
        owl:versionIRI   "http://hl7.org/fhir/adverse-event-seriousness/3.1.0" ;
        owl:versionInfo  "AdverseEventSeriousness(3.1.0)" .

adverse-event-seriousness:SeriousRequiresPreventImpairment
