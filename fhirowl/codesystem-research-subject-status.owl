@prefix fhir:  <http://hl7.org/fhir/> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix research-subject-status: <http://hl7.org/fhir/research-subject-status/> .
@prefix w5:    <http://hl7.org/fhir/w5#> .

research-subject-status:
        a                owl:Ontology ;
        rdfs:comment     "Indicates the progression of a study subject through a study" ;
        rdfs:label       "ResearchSubjectStatus" ;
        owl:versionIRI   "http://hl7.org/fhir/research-subject-status/3.1.0" ;
        owl:versionInfo  "ResearchSubjectStatus(3.1.0)" .

research-subject-status:active
        a           owl:Class ;
        rdfs:label  "Active" ;
        <http://www.w3.org/2004/02/skos/core#definition>
                "The subject is currently being monitored and/or subject to treatment as part of the study" ;
        <http://www.w3.org/2004/02/skos/core#prefLabel>
                "Active" .

research-subject-status:withdrawn
        a           owl:Class ;
        rdfs:label  "Withdrawn" ;
        <http://www.w3.org/2004/02/skos/core#definition>
                "The subject has permanently ended participation in the study prior to completion of the intended monitoring/treatment" ;
        <http://www.w3.org/2004/02/skos/core#prefLabel>
                "Withdrawn" .

research-subject-status:candidate
        a           owl:Class ;
        rdfs:label  "Candidate" ;
        <http://www.w3.org/2004/02/skos/core#definition>
                "The subject has been identified as a potential participant in the study but has not yet agreed to participate" ;
        <http://www.w3.org/2004/02/skos/core#prefLabel>
                "Candidate" .

research-subject-status:completed
        a           owl:Class ;
        rdfs:label  "Completed" ;
        <http://www.w3.org/2004/02/skos/core#definition>
                "All intended monitoring/treatment of the subject has been completed and their engagement with the study is now ended" ;
        <http://www.w3.org/2004/02/skos/core#prefLabel>
                "Completed" .

research-subject-status:enrolled
        a           owl:Class ;
        rdfs:label  "Enrolled" ;
        <http://www.w3.org/2004/02/skos/core#definition>
                "The subject has agreed to participate in the study but has not yet begun performing any action within the study" ;
        <http://www.w3.org/2004/02/skos/core#prefLabel>
                "Enrolled" .

research-subject-status:suspended
        a           owl:Class ;
        rdfs:label  "Suspended" ;
        <http://www.w3.org/2004/02/skos/core#definition>
                "The subject has temporarily discontinued monitoring/treatment as part of the study" ;
        <http://www.w3.org/2004/02/skos/core#prefLabel>
                "Suspended" .
